<div class="login_form">
  <%= semantic_form_for :credentials do |f| %>
    <div class="email_field">
      <span>email:</span><%= f.input :email, :input_html => {:value => @email} %>
    </div>
    <div class="password_field">
      <span>password:</span><%= f.input :password %>
    </div>
      <%= f.action :submit, :as => :button  %>
  <% end %>
</div>
