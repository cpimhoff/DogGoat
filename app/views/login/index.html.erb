<div class="login_header">
  <h1>Login</h1>
  <h2>Provide your credentials here. If you want access, that is.</h2>
  <p>
    If you are trying to claim an account after being provided an invitation code from a pal, go to <strong><%= link_to "Claim Account", new_member_path %></strong>.
  </p>
  <p>
    If you lost your password, <strong><%= link_to "reset it here", controller: "login", action: "lost_password" %></strong>.
  </p>
</div>

<div class="login_form">
  <%= semantic_form_for :credentials do |f| %>
    <h3>Email:</h3>
    <%= f.input :email, :input_html => {value: @email, class: "underlined-input long-input"} %>
    <h3>Password:</h3>
    <%= f.input :password, input_html: {class: "long-input"} %>
    <%= f.action :submit, :as => :button, :button_html => {:class => "button"} %>
  <% end %>
</div>
