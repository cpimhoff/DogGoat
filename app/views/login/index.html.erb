<div class="login_form">
  <%= semantic_form_for :credentials do |f| %>
    <div class="email_field">
      <% if @email.blank? %>
        <% @email = "" %>
      <% end %>
      <span>email:</span><%= f.input :email, :value => @email %>
    </div>
    <div class="password_field">
      <span>password:</span><%= f.input :password %>
    </div>
      <%= f.action :submit, :as => :button  %>
  <% end %>
</div>
