
<div class="post-show">
  <div class="post-heading" style="border-left-color: <%=@post.color%>">
    <div class="title">
      <%= @post.title %>
    </div>
    <div class="author">
      <%= link_to @post.author.full_name, member_path(@post.author) %>
    </div>
  </div>
  <div class="post-content markdown on-load-fade-drop-from-above">
    <% if @post.is_draft %>
      <div class="draft-notice">DRAFT - <%= @post.updated_at.to_s :short_ordinalized %></div>
    <% end %>
    <%= raw(@post.content) %>
  </div>

  <% if @post.author_id == session[:member_id] %>
    <%= link_to "edit", edit_post_path(@post), class: "button" %>
  <% end %>

  <div class="score">
    <!-- <div class="triangle-up-button"></div> -->
    <%= link_to "", upvote_post_path(@post), class: 'triangle-up-button vote-action', method: :put, remote: true %>
    <div class="label">
      <span class="score-value"><%= @post.score %></span>
      <h4>current score</h4>
    </div>
    <%= link_to "", downvote_post_path(@post), class: 'triangle-down-button vote-action', method: :put, remote: true %>
  </div>
</div>
