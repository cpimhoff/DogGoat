
<div class="post-show">
  <div class="post-heading" style="border-left-color: <%=@post.color%>">
    <div class="title">
      <%= @post.title %>
    </div>
    <div class="author">
      <%= link_to @post.author.full_name, member_path(@post.author) %>
    </div>
  </div>
  <div class="post-content markdown on-load-fade-drop-from-above">
    <% if @post.is_draft %>
      <div class="draft-notice">DRAFT - <%= @post.updated_at.to_s :short_ordinalized %></div>
    <% end %>
    <%= raw(@post.content) %>
  </div>
  <% if @post.author_id == session[:member_id] %>
    <%= link_to "edit", edit_post_path(@post), class: "button" %>
  <% end %>
</div>
