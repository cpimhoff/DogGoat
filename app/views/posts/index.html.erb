
<div class="posts_list">
  <% @posts.each do |p| %>
    <div class="post">
      <span class="author">
        <%= p.author.full_name %>
      </span>
      <span class="title">
        <%= p.title %>
      </span>
      <span class="views">
        <%= p.view_count %>
      </span>
    </div>
  <%end%>
</div>
