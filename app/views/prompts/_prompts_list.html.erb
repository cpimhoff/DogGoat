<div class="prompts-list content-listing on-load-sequence-fade-in-container">
  <% @prompts.each do |p| %>
    <div class="prompt-index-preview animation-child">
      <span class="prompt_details" style="border-left-color: <%=p.color%>">
        <span class="prompt-text">
          <%= link_to p.text, prompt_path(p) %>
        </span>
        <span class="author">
          <%= link_to "from #{p.author.full_name}", member_path(p.author) %>
        </span>
        <span class="prompt-status" data-status="<%=p.is_open ? 'open' : 'closed' %>">
          <%= p.is_open ? "open" : "completed" %>
        </span>
      </span>
    </div>
  <%end%>

  <%= paginate @prompts, :window => 2 %>
</div>
