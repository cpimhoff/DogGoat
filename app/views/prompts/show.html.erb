<div class="prompt-show">
  <div class="prompt-heading" style="border-left-color: <%=@prompt.color%>">
    <div class="title">
      <%= @prompt.title %>
    </div>
    <div class="author">
      <%= link_to @prompt.author.full_name, member_path(@prompt.author) %>
    </div>
    <div class="prompt-text">
      <%= @prompt.text %>
    </div>
  </div>

  <% if @prompt.author_id == session[:member_id] %>
    <%= link_to "edit", edit_prompt_path(@prompt), class: "button" %>
  <% end %>


  <div class="on-load-sequence-fade-in-container">
    <% @prompt.riffs.each do |r| %>
      <div class="riff-show animation-child">
        <div class="riff-content">
          <%= r.content %>
        </div>
        <div class="riff-author">
          <%= r.author.full_name %>
        </div>
      </div>
    <% end %>
  </div>

  <% if @prompt.is_open %>
    <div class="riff-form">
      <%= semantic_form_for :riff, remote: true, method: :put, url: add_riff_prompt_path(@prompt) do |f| %>
        <%= f.input :content, :as => :text, :input_html => {:placeholder => "make a riff"} %>
        <%= f.action :submit, :as => :button, label: "Submit", :button_html => {:class => "button smaller-button", :value => "post-riff"} %>
      <% end %>
    </div>
  <% end %>

</div>
