<div class="prompt-show">
  <div class="prompt-heading" style="border-left-color: <%=@prompt.color%>">
    <div class="title">
      <%= @prompt.title %>
    </div>
    <div class="author">
      <%= link_to @prompt.author.full_name, member_path(@prompt.author) %>
    </div>
    <div class="prompt-text">
      <%= @prompt.text %>
    </div>
  </div>

  <div class="riff-state-label">
    Results
  </div>
  <div class="riff-list on-load-sequence-fade-in-container">
    <% rank = 1 %>
    <% @winners.each do |r| %>
      <div class="riff-show animation-child">
        <span class="rank-number" data-rank="<%=rank%>"><%= rank %></span>
        <span class="riff-content">
          <%= r.content %>
        </span>
        <div class="riff-author">
          <%= link_to r.author.full_name, member_path(r.author) %>
        </div>
      </div>
      <% rank+=1 %>
    <% end %>
  </div>

</div>
